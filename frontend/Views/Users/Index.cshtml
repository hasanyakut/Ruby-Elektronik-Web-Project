@model List<frontend.Models.User>
@{
    ViewData["Title"] = "Ruby Elektronik - Kullanıcı Yönetimi";
}
<h2>Users</h2>
<a href="/Users/Create">Add User</a>
<table class="table">
    <thead>
        <tr><th>Name</th><th>Email</th><th></th></tr>
    </thead>
    <tbody>
    @foreach (var u in Model)
    {
        <tr>
            <td>@u.Name</td>
            <td>@u.Email</td>
            <td>
                <a href="/Users/Delete/@u.Id" class="btn btn-danger">Delete</a>
            </td>
        </tr>
    }
    </tbody>
</table> 