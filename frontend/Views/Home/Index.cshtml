<style>
    .hero-section {
        background: linear-gradient(135deg, rgba(0,0,0,0.8) 0%, rgba(0,0,0,0.6) 100%);
        backdrop-filter: blur(20px);
        border: 1px solid rgba(255, 255, 255, 0.2);
        border-radius: 30px;
        margin: 2rem 0;
        padding: 8rem 0;
        text-align: center;
        position: relative;
        overflow: hidden;
        box-shadow: 0 20px 60px rgba(0, 0, 0, 0.3);
        min-height: 80vh;
        display: flex;
        align-items: center;
    }
    
    .hero-section::before {
        content: '';
        position: absolute;
        top: 0;
        left: 0;
        right: 0;
        bottom: 0;
        background: 
            radial-gradient(circle at 20% 80%, rgba(220, 53, 69, 0.1) 0%, transparent 50%),
            radial-gradient(circle at 80% 20%, rgba(102, 126, 234, 0.1) 0%, transparent 50%);
        opacity: 0.3;
    }
    
    .hero-content {
        text-align: center;
        color: white;
        position: relative;
        z-index: 2;
    }
    
    .hero-title {
        font-size: 3.5rem;
        font-weight: 700;
        margin-bottom: 1.5rem;
        text-shadow: 0 2px 4px rgba(0,0,0,0.3);
        color: #ffd700;
        animation: titleGlow 4s ease-in-out infinite alternate;
    }
    
    @@keyframes titleGlow {
        0% { text-shadow: 0 2px 4px rgba(0,0,0,0.3); }
        100% { text-shadow: 0 2px 4px rgba(0,0,0,0.3), 0 0 20px rgba(255, 215, 0, 0.3); }
    }
    
    .hero-subtitle {
        font-size: 1.6rem;
        opacity: 0.95;
        margin-bottom: 2rem;
        text-shadow: 0 2px 4px rgba(0,0,0,0.3);
        overflow: hidden;
        white-space: nowrap;
        position: relative;
    }
    
    .hero-subtitle-content {
        display: inline-block;
        animation: slideText 20s linear infinite;
        white-space: nowrap;
    }
    
    .service-item {
        display: inline-flex;
        flex-direction: column;
        align-items: center;
        margin: 0 2rem;
        text-align: center;
    }
    
    .service-icon {
        font-size: 2.5rem;
        margin-bottom: 0.5rem;
        color: #ffd700;
    }
    
    .service-text {
        font-size: 1.1rem;
        font-weight: 600;
    }
    
    @@keyframes slideText {
        0% { transform: translateX(100%); }
        100% { transform: translateX(-100%); }
    }
    
    .hero-description {
        font-size: 1.1rem;
        opacity: 0.9;
        margin-bottom: 3rem;
        text-shadow: 0 2px 4px rgba(0,0,0,0.3);
    }
    
    .products-section {
        padding: 2rem 0;
    }
    
    .section-title {
        text-align: center;
        margin-bottom: 3rem;
        color: #667eea;
        font-size: 2.5rem;
        font-weight: 600;
    }
    
    .products-grid {
        display: grid;
        grid-template-columns: repeat(auto-fill, minmax(280px, 1fr));
        gap: 2rem;
        padding: 0 1rem;
    }
    
    .product-card {
        background: rgba(255, 255, 255, 0.1);
        border: 1px solid rgba(255, 255, 255, 0.2);
        border-radius: 25px;
        padding: 2rem;
        transition: all 0.4s ease;
        backdrop-filter: blur(20px);
        box-shadow: 0 8px 32px rgba(0, 0, 0, 0.1);
        position: relative;
        overflow: hidden;
    }
    
    .product-card::before {
        content: '';
        position: absolute;
        top: 0;
        left: 0;
        right: 0;
        bottom: 0;
        background: linear-gradient(135deg, rgba(220, 53, 69, 0.1) 0%, rgba(102, 126, 234, 0.1) 100%);
        opacity: 0;
        transition: opacity 0.3s ease;
    }
    
    .product-card:hover {
        transform: translateY(-10px) scale(1.02);
        box-shadow: 0 20px 60px rgba(102, 126, 234, 0.2);
        border-color: rgba(255, 255, 255, 0.4);
    }
    
    .product-card:hover::before {
        opacity: 1;
    }
    
    .product-image {
        width: 100%;
        height: 200px;
        background: linear-gradient(135deg, #667eea 0%, #ff6b6b 100%);
        border-radius: 20px;
        display: flex;
        align-items: center;
        justify-content: center;
        margin-bottom: 1.5rem;
        position: relative;
        overflow: hidden;
        box-shadow: 0 10px 30px rgba(102, 126, 234, 0.2);
    }
    
    .product-image::before {
        content: '';
        position: absolute;
        top: 0;
        left: -100%;
        width: 100%;
        height: 100%;
        background: linear-gradient(90deg, transparent, rgba(255,255,255,0.2), transparent);
        transition: left 0.5s;
    }
    
    .product-card:hover .product-image::before {
        left: 100%;
    }
    
    .product-icon {
        font-size: 4rem;
        color: white;
        opacity: 0.8;
    }
    
    .product-info {
        text-align: center;
    }
    
    .product-name {
        font-size: 1.3rem;
        font-weight: 600;
        color: #fff;
        margin-bottom: 0.5rem;
        line-height: 1.3;
    }
    
    .product-price {
        font-size: 1.8rem;
        font-weight: 700;
        color: #00b894;
        margin-bottom: 1rem;
    }
    

    
    .empty-state {
        text-align: center;
        padding: 4rem 2rem;
        color: #667eea;
    }
    
    .empty-icon {
        font-size: 4rem;
        margin-bottom: 1rem;
        opacity: 0.5;
    }
    
    .empty-title {
        font-size: 1.5rem;
        margin-bottom: 0.5rem;
    }
    
    .empty-text {
        opacity: 0.7;
        margin-bottom: 2rem;
    }
    
    @@media (max-width: 768px) {
        .products-grid {
            grid-template-columns: repeat(auto-fill, minmax(250px, 1fr));
            gap: 1.5rem;
        }
        
